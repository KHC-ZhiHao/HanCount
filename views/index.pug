doctype html
html
  head
    title 韓總計數器
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', type='image/png', href='./icon.png')
    link(rel='shortcut icon', type='image/png', href='./icon.png')
  body
    h1#title CTI Hant Counter
    iframe(width='560', height='315', src=`https://www.youtube.com/embed/${YOUTUBE_VIDEO_ID}`, frameborder='0', allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='')
    #count 0
    #message 連線中
    #support
      ul#messages
    #footer
      a(href='https://github.com/KHC-ZhiHao/HanCount', target='_blank')
        svg(height='32', viewBox='0 0 16 16', version='1.1', width='32', aria-hidden='true')
          path(fill='#FFF', d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z')
      span 起始紀錄起點 : #{startTime}
    style.
      body {
      background-color: #333;
      color: #FFF;
      padding: 10px;
      padding-top: 3em;
      text-align: center;
      }
      #title {
      padding-bottom: 30px;
      }
      #count {
      font-size: 5em;
      padding-bottom: 30px;
      }
      #support {
      color: #AAA;
      padding-top: 1em;
      font-size: 0.8em;
      }
      #support div {
      padding-bottom: 7px;
      }
      #messages{
        text-align: left;
      }
      #messages li {
        list-style: none;
      }
      #messages li:first-child {
        display: none;
      }
      #footer {
      padding: 10px 10px;
      position: fixed;
      bottom: 0px;
      text-align: right;
      right: 0px;
      }
      #footer a {
      margin-bottom: 5px;
      display: block;
      }
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js')
    script.
      //- var ip = "${publicIp}";
      //- var socket = io('http://' + ip)
      var socket = io('/')
      var elCount = document.getElementById('count')
      var elMessage = document.getElementById('message')
      var elMessages = document.getElementById('messages')
      socket.on('update', (data) => {
        elCount.innerHTML = data.count
        elMessage.innerHTML = data.text
        //- pushMessage(data)
        let li = document.createElement('li')
        li.innerText = `${data.date}: ${data.text}`
        elMessages.prepend(li)
      })
